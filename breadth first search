class Solution{
public:
    // Function to return Breadth First Traversal of given graph.
    vector<int> bfsOfGraph(int N, vector<int> adj[]) {
        // Code here
        queue<int> q;
        vector<bool> vis(N,false);
        vector<int> ans;
        
        q.push(0);
        
        while(!q.empty()){
           
           int node=q.front();
            q.pop();
         
           if(vis[node]) continue;
           
           ans.push_back(node);
           vis[node]=true;
           
           for(int child:adj[node]){
               if(!vis[child])
                 q.push(child);
           }
        }
        
        return ans;
    }
};
