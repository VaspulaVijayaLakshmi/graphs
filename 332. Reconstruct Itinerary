class Solution {
public:
    unordered_map<string, multiset<string>> adj;
    vector<string> result;

    void dfs(const string& src) {
        while (!adj[src].empty()) {
            auto it = adj[src].begin();  // smallest lexicographic airport
            string next = *it;
            adj[src].erase(it);
            dfs(next);
        }
        result.push_back(src);
    }

    vector<string> findItinerary(vector<vector<string>>& tickets) {
        
        // Build graph
        for (auto& t : tickets) {
            adj[t[0]].insert(t[1]);
        }

        dfs("JFK");
        reverse(result.begin(), result.end());
        return result;
    }
};

____


class Solution {
public:
    unordered_map<string, priority_queue<string, vector<string>, greater<string>>> adj;
    vector<string> result;

    void dfs(string src) {
        auto &pq = adj[src];
        while (!pq.empty()) {
            string next = pq.top();
            pq.pop();
            dfs(next);
        }
        result.push_back(src);
    }

    vector<string> findItinerary(vector<vector<string>>& tickets) {
        for (auto &t : tickets) {
            adj[t[0]].push(t[1]);
        }
        dfs("JFK");
        reverse(result.begin(), result.end());
        return result;
    }
};
